@using Task10.WebPL.Models;
@using System.Web.Mvc;

<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/mystyle.css" rel="stylesheet" />
</head>
<body class="mybg">
    <nav class="navbar navbar-expand-lg navbar-dark bg-info">
        <span class="navbar-brand">Users and awards</span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="~/index.cshtml">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Pages/ShowUsers.cshtml" role="button">
                        Users
                    </a>
                </li>
                @if (User.IsInRole("ADMIN"))
                {
            <li class="nav-item">
                <a class="nav-link" href="~/Pages/ShowAwards.cshtml" role="button">
                    Awards
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/Pages/Roles/RoleManagement.cshtml" role="button">
                    Role management
                </a>
            </li>
                }
            </ul>
            @if (User.Identity.IsAuthenticated)
            {
        <div class="btn alert-primary" id="authusername">@User.Identity.Name </div>
                <button class="btn btn-danger btn-auth" onclick="logout();">Sign out</button>
            }
            @if (!User.Identity.IsAuthenticated)
            {
                <button class="btn btn-danger btn-auth" onclick="signin();">Sign in</button>
                <button class="btn btn-danger btn-auth" onclick="signup();">Sign up</button>
            }
        </div>
    </nav>

    @RenderBody()

    

    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script>
        function logout() {
            location.href = "" +  "/Pages/Auth/SignOut.cshtml";
        }

        function signup() {
            location.href = "" + "/Pages/Auth/SignUp.cshtml";
        }

        function signin() {
            location.href = "" + "/Pages/Auth/SignIn.cshtml";
        }
    </script>
</body></html>
